{
    "compilerOptions": {
        "outDir": "dist",
        "strict": false,
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist"]
}