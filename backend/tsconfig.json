{
  "compilerOptions": {
    "outDir": "dist",                      // Proper build output directory
    "strict": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]                         
    },


  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
